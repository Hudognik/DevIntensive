<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/login_coordinator_conteiner"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:ignore="contentDescription">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_bg"
            android:scaleType="centerCrop"/>

        <android.support.v7.widget.CardView
            android:id="@+id/authorization_box"
            android:layout_width="@dimen/size_larger_240"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/spacing_tiny_2"
            app:cardElevation="@dimen/spacing_small_8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_normal_16"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/spacing_medium_32">

                    <View
                        android:id="@+id/login_indicator"
                        android:layout_width="@dimen/spacing_tiny_4"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/spacing_medium_20"
                        android:background="@color/red"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/login_indicator"
                        android:layout_marginLeft="@dimen/spacing_medium_24"
                        android:layout_marginRight="@dimen/spacing_medium_24"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/enter"
                        android:textColor="@color/red"
                        android:textSize="@dimen/font_large_24"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/spacing_medium_24"
                    android:paddingLeft="@dimen/spacing_medium_24"
                    android:paddingRight="@dimen/spacing_medium_24">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_medium_24"
                        android:layout_marginRight="@dimen/spacing_medium_24"
                        android:layout_marginTop="@dimen/spacing_normal_16">

                        <EditText
                            android:id="@+id/login_email_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:hint="@string/email_login_et"
                            android:inputType="textEmailAddress"
                            android:textColorHint="@color/grey"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/login_password_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_medium_24"
                        android:layout_marginRight="@dimen/spacing_medium_24"
                        android:layout_marginTop="@dimen/spacing_normal_16">


                        <EditText
                            android:id="@+id/password_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:hint="@string/password_login_et"
                            android:inputType="textEmailAddress"
                            android:textColorHint="@color/grey"/>
                    </android.support.design.widget.TextInputLayout>


                    <Button
                        android:id="@+id/signin_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/spacing_medium_24"
                        android:layout_marginTop="@dimen/spacing_medium_24"
                        android:background="@color/red"
                        android:paddingLeft="@dimen/spacing_large_56"
                        android:paddingRight="@dimen/spacing_large_56"
                        android:text="@string/enter"
                        android:textColor="@android:color/white">
                    </Button>

                    <TextView
                        android:id="@+id/forget_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/forget_password"
                        android:textColor="@color/grey_light"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>


