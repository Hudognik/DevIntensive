<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/navigation_drawer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.activities.MainActivity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_coordinator_conteiner"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_primary"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/grey_light"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:id="@+id/user_photo_img"
                    android:layout_width="match_parent"
                    android:layout_height="256dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/header_bg"
                    android:fitsSystemWindows="true"/>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:theme="@style/AppTheme.PopupOverlay"
                    android:titleTextColor="@color/white"
                    app:layout_collapseMode="pin"/>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--user Bar -->
                <LinearLayout
                    style="@style/userBar">

                    <LinearLayout
                        style="@style/userBarElement.Side">

                        <TextView
                            style="@style/userBarText.Value"
                            android:text="@string/count_rating"/>

                        <TextView
                            style="@style/userBarText.Description"
                            android:text="@string/rating"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/userBarSeparator">
                    </LinearLayout>

                    <LinearLayout
                        style="@style/userBarElement.Central">

                        <TextView
                            style="@style/userBarText.Value"
                            android:text="@string/count_string_code"/>

                        <TextView
                            style="@style/userBarText.Description"
                            android:text="@string/write_string_code"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/userBarSeparator">
                    </LinearLayout>

                    <LinearLayout
                        style="@style/userBarElement.Side">

                        <TextView
                            style="@style/userBarText.Value"
                            android:text="@string/count_projects"/>

                        <TextView
                            style="@style/userBarText.Description"
                            android:text="@string/projects"/>
                    </LinearLayout>
                </LinearLayout>

                <!--user List Information Elements-->
                <!--phone -->
                <LinearLayout
                    style="@style/listElements">

                    <ImageView
                        android:id="@+id/call_img"
                        style="@style/icon.left"
                        android:src="@drawable/ic_call_black_24dp"/>

                    <LinearLayout
                        style="@style/listContent">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/phone_et"
                                style="@style/listEditText"
                                android:hint="@string/mobile"
                                android:inputType="phone"
                                android:text="@string/phone_number"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_phone_in_talk_black_24dp"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/ListSeparator">
                </LinearLayout>

                <!--Email -->
                <LinearLayout
                    style="@style/listElements">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_email_black_24dp"/>

                    <LinearLayout
                        style="@style/listContent">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/email_et"
                                style="@style/listEditText"
                                android:hint="@string/email"
                                android:inputType="textEmailAddress"
                                android:text="@string/email_value"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_send_black_24dp"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/ListSeparator">
                </LinearLayout>

                <!--Social web -->
                <LinearLayout
                    style="@style/listElements">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/vk_circle"/>

                    <LinearLayout
                        style="@style/listContent">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/vk_et"
                                style="@style/listEditText"
                                android:hint="@string/profile_vk"
                                android:inputType="textUri"
                                android:text="@string/edit_profil_vk"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_visibility_black_24dp"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/ListSeparator">
                </LinearLayout>

                <!--Github-->
                <LinearLayout
                    style="@style/listElements">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/github_circle"/>

                    <LinearLayout
                        style="@style/listContent">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/git_et"
                                style="@style/listEditText"
                                android:hint="@string/repository"
                                android:inputType="textUri"
                                android:text="@string/edit_repository"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_visibility_black_24dp"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/ListSeparator">
                </LinearLayout>

                <!--About -->
                <LinearLayout
                    style="@style/listElements">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_account_circle_black_24dp"/>

                    <LinearLayout
                        style="@style/listContent">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/bio_et"
                                style="@style/listEditText"
                                android:hint="@string/about"
                                android:inputType="text"
                                android:text="@string/edit_about"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/ListSeparator">
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_create_black_24dp"
            app:layout_anchor="@id/appbar_layout"
            app:layout_anchorGravity="bottom|right"
            android:layout_marginRight="@dimen/fab_right_space"/>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>